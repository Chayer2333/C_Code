{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "喵喵喵喵",    // 需与 launch "preLaunchTask" 字段保持一致
            "type": "cppbuild",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fo:Buffer/",      // .obj文件输出到Buffer文件夹
                "/Fd:Buffer/",      // .pdb文件输出到Buffer文件夹
                "/FeEXE/${fileBasenameNoExtension}_MSVC.exe",  // .exe文件输出到EXE文件夹
                "${file}",
                "/link",            // 添加链接器参数分隔符
                "/INCREMENTAL",     // 启用增量链接（生成.ilk文件）
                "/ILK:Buffer/${fileBasenameNoExtension}.ilk",  // .ilk文件输出位置
                "/PDB:Buffer/${fileBasenameNoExtension}.pdb",  // 链接器 .pdb
                "/DEBUG"            // 生成调试信息（与/Zi对应）
            ],
            "options": {
                "cwd": "E:/8_Buffer/C_Compile/MSVC"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true   // 定义为默认使用的任务模式
            },
            "detail": "编译器: cl.exe"
        },
        {
            "label": "TDM-GCC C17标准",
            "type": "shell",
            "command": "powershell",                            // 运行的任务
            "args": [                                           // 4. 传递给命令的参数
                "-ExecutionPolicy",                             // 绕过执行策略限制
                "Bypass",                                       // 允许运行脚本
                "-File",                                        // 指定要运行的文件
                "${workspaceFolder}/.vscode/Auto_Clean.ps1",    // 脚本路径及名称
                "${file}"                                       // 当前文件路径
            ],
            /*"options": {
                "cwd": "E:/8_Buffer/C_Compile/TDM-GCC" // 指向新的联接根目录
            },*/
            /*"options": {
                "cwd": "C:/TDM-GCC-64/bin"
            },*/
            "problemMatcher": [
                "$gcc"              // 6. 问题匹配器（解析编译错误）
            ],
            "group": {
                "kind": "build",
                "isDefault": false  // 设为false，不覆盖默认MSVC任务
            },
            "detail": "使用独立TDM-GCC编译，标准C17"        // 任务描述
        }
    ]
}