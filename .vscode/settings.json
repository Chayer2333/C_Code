{
    "editor.fontLigatures": false,
    "json.schemaDownload.enable": true,
    "files.associations": {     // 文件关联配置
        "*.c": "c",             // .c文件关联到C语言
        "*.h": "c",             // .h文件也关联到C语言
        "*.cpp": "cpp",
        "*.cc": "cpp",
        "*.cxx": "cpp",
        "*.c++": "cpp",
        "*.hpp": "cpp",
        "*.hxx": "cpp"
    },
    "json.schemas": [       // JSON模式定义（用于markdownlint）
        {
            "fileMatch": [
                ".markdownlint.json",
                ".markdownlint.jsonc",
                ".markdownlint.yaml",
                ".markdownlint.yml"
            ],
            "url": "file:///E:/8_Buffer/C_Compile/TDM-GCC/Config/markdownlint-config-schema.json" // 本地或镜像文件
        }
    ],
//  {   配置翻译属性
        "commentTranslate.targetLanguage": "zh-CN",
        "commentTranslate.hover.enabled": true,
        "commentTranslate.source": "Bing",
        "commentTranslate.multiLineMerge": false
//  }
}